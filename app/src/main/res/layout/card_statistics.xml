<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start">

                    <com.neo.arcchartview.ArcChartView
                        android:id="@+id/arcChartView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:acv_allow_setting_value_by_touch="false"
                        app:acv_icon_size="0dp"
                        app:acv_lines_count="10"
                        app:acv_lines_space="4dp"
                        app:acv_lines_width="1dp"
                        app:acv_mid_start_extra_offset="60dp"
                        app:acv_sections_count="4"
                        app:acv_sections_space="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.555" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_unhealthy"
                        app:layout_constraintBottom_toTopOf="@+id/imageView3"
                        app:layout_constraintStart_toEndOf="@+id/arcChartView"
                        app:layout_constraintTop_toBottomOf="@+id/imageView" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_care"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/arcChartView"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3"
                        app:layout_constraintVertical_bias="0.516" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_symptoms"
                        app:layout_constraintBottom_toTopOf="@+id/imageView4"
                        app:layout_constraintStart_toEndOf="@+id/arcChartView"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_healthy"
                        app:layout_constraintBottom_toTopOf="@+id/imageView2"
                        app:layout_constraintStart_toEndOf="@+id/arcChartView"
                        app:layout_constraintTop_toBottomOf="@+id/cardTime" />

                    <TextView
                        android:id="@+id/cardSugar"
                        style="@style/TextAppearance.MdcTypographyStyles.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.0"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/arcChartView"
                        app:layout_constraintEnd_toEndOf="@+id/arcChartView"
                        app:layout_constraintStart_toStartOf="@+id/arcChartView"
                        app:layout_constraintTop_toTopOf="@+id/arcChartView" />

                    <TextView
                        android:id="@+id/cardDate"
                        style="@style/TextAppearance.MdcTypographyStyles.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="06.09.2022"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/cardTime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/arcChartView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/cardTime"
                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="7:30 AM"
                        app:layout_constraintBottom_toTopOf="@+id/cardHealthy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/arcChartView"
                        app:layout_constraintTop_toBottomOf="@+id/cardDate" />

                    <TextView
                        android:id="@+id/cardHealthy"
                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="14dp"
                        android:text="TextView"
                        android:textColor="@color/md_green_A700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toBottomOf="@+id/cardTime" />

                    <TextView
                        android:id="@+id/cardUnhealthy"
                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:text="TextView"
                        android:textColor="@color/md_red_A700a"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/cardHealthy" />

                    <TextView
                        android:id="@+id/cardSymptoms"
                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:text="TextView"
                        android:textColor="@color/md_light_blue_700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toBottomOf="@+id/cardUnhealthy" />

                    <TextView
                        android:id="@+id/cardCare"
                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="14dp"
                        android:text="TextView"
                        android:textColor="@color/md_yellow_800"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        app:layout_constraintTop_toBottomOf="@+id/cardSymptoms"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </com.google.android.material.card.MaterialCardView>
    
</layout>