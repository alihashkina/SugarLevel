<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cardMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="5dp"
                    android:layout_gravity="end"
                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/cardSugar"
                                        style="@style/TextAppearance.MdcTypographyStyles.Headline5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10.0"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="5dp"
                                        android:textColor="@color/md_black_1000"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/cardSugarml"
                                        style="@style/TextAppearance.MdcTypographyStyles.Headline5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="(10.0)"
                                        android:textColor="@color/md_grey_500"/>

                                    <TextView
                                        android:id="@+id/cardDate"
                                        style="@style/TextAppearance.MdcTypographyStyles.Headline5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:padding="10dp"
                                        android:textColor="@color/md_grey_500"
                                        android:text="06.09.2022"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_healthy" />

                                    <TextView
                                        android:id="@+id/cardHealthy"
                                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="10dp"
                                        android:text="TextView"
                                        android:textColor="@color/green" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_unhealthy" />

                                    <TextView
                                        android:id="@+id/cardUnhealthy"
                                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="10dp"
                                        android:text="TextView"
                                        android:textColor="@color/red" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_symptoms" />

                                    <TextView
                                        android:id="@+id/cardSymptoms"
                                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="10dp"
                                        android:text="TextView"
                                        android:textColor="@color/light_blue" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_care" />

                                    <TextView
                                        android:id="@+id/cardCare"
                                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="10dp"
                                        android:text="TextView"
                                        android:textColor="@color/yellow" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/imageView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_other" />

                                    <TextView
                                        android:id="@+id/cardOther"
                                        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="10dp"
                                        android:text="TextView"
                                        android:textColor="@color/md_purple_900" />
                                </LinearLayout>

                            </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </layout>