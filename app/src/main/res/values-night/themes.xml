<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SugarLevel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_700</item>
        <item name="colorPrimaryVariant">@color/md_blue_400</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_700</item>
        <item name="colorSecondaryVariant">@color/md_blue_400</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LineView">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorContainer">@color/md_white_1000</item>
        <item name="lineHeight">@color/md_white_1000</item>
    </style>

